<Configuration status="info" name="legendclient" packages="">
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%cyan{%d{HH:mm:ss.SSS}} | %style{%highlight{%level}}{bright} %logger %cyan{>} %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>
</Configuration>